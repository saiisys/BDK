@model BDK.DB.Session
 
@{
    ViewBag.Title = "Session Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-edit"></i> Form Elements</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>

@using (Html.BeginForm("Save", "Session", FormMethod.Post)) {
     @Html.AntiForgeryToken()    
					<div class="box-content">
						
						  <fieldset>
							@Html.ValidationSummary()
							<div class="control-group">
							  <label class="control-label" for="typeahead">
                                  @Html.LabelFor(m=> m.SessionName) 
							  </label>
							  <div class="controls">
								@*<input type="text" class="span6 typeahead" id="SName" value="@Model.SessionName">*@
                                  @Html.TextBoxFor(m => m.SessionName, new {@class="span6 typeahead", id="SName" })
                                   @Html.ValidationMessageFor(m=>m.SessionName,"*")

							  </div>
							</div>
							<div class="control-group">
							  <label class="control-label" for="date01">Start Date</label>
							  <div class="controls">
								@*<input type="text" class="input-xlarge datepicker" id="SStartdate" value="02/16/12" pattern="">*@
							  @Html.TextBoxFor(m => m.Startdate,"{0:dd-MM-yyyy}",  new { @class = "datepicker", type = "text" })
                              </div>
                                 <label class="control-label" for="date01">End Date</label>
							  <div class="controls">
								@*<input type="text" class="input-xlarge datepicker" id="SEnddate" value="02/16/12">
                                   @Html.TextBoxFor(m => m.EndingDate ,"{0:dd-MM-yyyy}",  new {id = "SEnddate", @class = "datetype" })*@                                 
                               @Html.TextBoxFor(model => model.EndingDate,"{0:dd-MM-yyyy}",  new { @class = "datepicker", type = "text" })
   
							  </div>
							</div>
                              <label class="control-label" for="optionsCheckbox2">Default Session</label>
								<div class="controls">
								  <label class="checkbox">
                                            
                                     @Html.CheckBoxFor(m => m.DefaultIndic)     
									
									This is a Defalt Session

								  </label>
                                    @Html.HiddenFor(model => model.SessionId)
								</div>
							
							<div class="form-actions">
							  <button type="submit" class="btn btn-primary">Save changes</button>
							  <button type="reset" class="btn">Cancel</button>
							</div>
						  </fieldset>
						@*</form>*@   

					</div>
                            
			
}
 

    </div>
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-user"></i> Members</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>Session Name</th>
								  
								  <th>Start Date</th>
                                  <th>End Date</th>
                                  <th>Default Session</th>
                                   <th>Open Session</th>
                                   <th>Action</th>
							  </tr>
						  </thead>   
						  <tbody>
							
								@foreach (var obj in ViewBag.SessionList)
        {<tr>
            <td class="center">@obj.SessionName</td>
        <td class="center">@obj.Startdate</td>
								
			<td class="center">@obj.EndingDate</td>
            
            <td class="center">obj.DefaultIndic</td>
            
            <td class="center">@obj.OpenIndic  </td>				
								<td class="center">
									
									<a class="btn btn-info" href="@Url.Action("EditSession", new {id = obj.SessionId})">
										<i class="icon-edit icon-white"></i>  
										Edit                                            
									</a>
									<a class="btn btn-danger" href="#">
										<i class="icon-trash icon-white"></i> 
										Delete
									</a>
								</td>
							</tr>
        }
							
							
							
						  </tbody>
					  </table>            
					</div>
				</div>
