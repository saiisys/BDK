@model BDK.DB.Class 
@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-edit"></i> Form Elements</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>

@using (Html.BeginForm("Save", "Class", FormMethod.Post)) {
     @Html.AntiForgeryToken()    
					<div class="box-content">
						
						  <fieldset>
							@Html.ValidationSummary()
							<div class="control-group">
							  <label class="control-label" for="typeahead">
                                 Class Name
							  </label>
							  <div class="controls">
								@*<input type="text" class="span6 typeahead" id="SName" value="@Model.SessionName">*@
                                  @Html.TextBoxFor(m => m.ClassName  , new {@class="span6 typeahead", id="cname" })
                                  

                                  

							  </div>
                                  @Html.HiddenFor(m => m.CastId )
                                 @Html.HiddenFor(m => m.Sessionname  )
							</div>
							
							
							
							<div class="form-actions">
							  <button type="submit" class="btn btn-primary">Save changes</button>
							  <button type="reset" class="btn">Cancel</button>
							</div>
						  </fieldset>
						@*</form>*@   

                        
					</div>
                            
			
}
 

    </div>
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-user"></i> Members</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>CastName</th>
								  
                                   <th>Action</th>
							  </tr>
						  </thead>   
						  <tbody>
							

								@foreach (var obj in ViewBag.CastList)
        {<tr>
            <td class="center">@obj.CastName</td>
        			
								<td class="center">
									
									<a class="btn btn-info" href="@Url.Action("EditCast", new {id = obj.CastId})">
										<i class="icon-edit icon-white"></i>  
										Edit                                            
									</a>
									<a class="btn btn-danger" href="#">
										<i class="icon-trash icon-white"></i> 
										Delete
									</a>
								</td>
							</tr>
        }
							
							
							
						  </tbody>
					  </table>            
					</div>
				</div>
