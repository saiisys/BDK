@model BDK.DB.ExtraCertificate
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "ExtraCertificates", FormMethod.Post))
{
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-edit"></i> Class Fee Details</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>


    
				
    <div class="box-content">
						
						  <fieldset>
						
						            	<div class="control-group">
								        <label class="control-label" for="selectError">Certificate Name:</label>
								        <div class="controls">
                                          @Html.TextBoxFor(m => m.CertificateName  , new {@class="span6 typeahead", id="cname" })
							             </div>
                              <div class="control-group">
								        <label class="control-label" for="selectError">Persent</label>
								        <div class="controls">
                                          @Html.TextBoxFor(m => m.CertificatePersent  , new {@class="span6 typeahead", id="cname" })
								        </div>
							             </div>
                              
                                            @Html.HiddenFor(m => m.CertificateId )
                                            @Html.HiddenFor(m =>m.SessionName   )
							</div>
							
							<div class="form-actions">
							  <button type="submit" class="btn btn-primary">Save changes</button>
							  <button type="reset" class="btn">Cancel</button>
							</div>
						  </fieldset>
						@*</form>*@   

                        
					</div>
    
    </div>
}
<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-user"></i> Members</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  
								  <th>Certificat Name :</th>
                                  <th>Persent</th>
                                  
                                   <th>Action</th>
							  </tr>
						  </thead>   
						  <tbody>
							

								@foreach (var obj in @BDK.Controllers.ExtraCertificatesController.Fillgrid())
        {<tr>
           
            <td class="center"> @obj.CertificateName </td>
            <td class="center"> @obj.CertificatePersent </td>
        			
								<td class="center">
									
									<a class="btn btn-info" href="@Url.Action("EditCertificates", new {id = obj.CertificateId })">
										<i class="icon-edit icon-white"></i>  
										Edit                                            
									</a>
									<a class="btn btn-danger" href="#">
										<i class="icon-trash icon-white"></i> 
										Delete
									</a>
								</td>
							</tr>
        }
							
							
							
						  </tbody>
					  </table>            
					</div>
				</div>
